extends layout.pug

block content
	h1 New Book
	form(method='post', action='/books/new')
		if messages
			h2.error Oooops!
			ul.error
				each message in messages
					li= message
		p
			label(for='title') Title
			input#title(name='title', type='text')
		p
			label(for='author') Author
			input#author(name='author', type='text')
		p
			label(for='genre') Genre
			input#genre(name='genre', type='text')
		p
			label(for='year') Year
			input#year(name='year', type='text')
		p
			input(type='submit', value='submit')
		p
			a.button(href='/') Cancel
